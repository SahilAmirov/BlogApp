@using BlogApp.Models.Dtos;
@using BlogApp.Models.Entities;
@model List<PostDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="from-following-hader-area" data-aos="fade-up">
            <div class="section-title">

                <h3">|</h3>
            </div>
        </div>
    </div>
</div>

<div class="from-following-area section-space--ptb_80">
    <div class="container">
        <!-- Swiper -->
        <div class="swiper-container following-slider-deactive">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <div class="row row--17">
                        <div class="from-following col">
                            <div class="row row--17">

                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                                        <div class="col-md-4 col-sm-4">
                                            <!-- Single Following Post Start -->
                                            <div class="single-following-post" data-aos="fade-up">
                                                <div class="following-post-thum">
                                                    <a href="/home/postdetails/@Model[i].Post.ID">
                                                        @if (Model[i].Post.PhotoLink.StartsWith("https://"))
                                                        {
                                            <img src=@Model[i].Post.PhotoLink alt="Hatali Link">
                                        }
                                        else
                                        {
                                                            <img src="https://s3.amazonaws.com/pixpa.com/com/articles/1516553730-shutterstock_429631015.jpg" alt="Hatali Link">
                                        }
                                        
                                                    </a>
                                                </div>
                                                <div class="following-post-content">
                                                    <div class="following-blog-post-top">
                                                        <div class="trending-blog-post-category">
                                                            <a href="#" class="health">@Model[i].Category.Name</a>
                                                        </div>
                                                        <div class="following-blog-post-author">
                                                            By <a href="#">@Model[i].Writer.Name</a>
                                                        </div>
                                                    </div>
                                                    <h5 class="following-blog-post-title">
                                                        <a href="/home/postdetails/@Model[i].Post.ID">
                                            @Model[i].Post.Title
                                                        </a>
                                                    </h5>
                                                    <div class="following-blog-post-meta">
                                                        <div class="post-meta-left-side">
                                                            <span class="post-date">
                                                                <i class="icofont-ui-calendar"></i>
                                                                <a href="#">@Model[i].Post.PublishDate</a>
                                                            </span>
                                                        </div>
                                                        <div class="post-meta-right-side">
                                                            <a href="#"><img src="/home/assets/images/icons/small-bookmark.png" alt="" /></a>
                                                            <a href="#"><img src="/home/assets/images/icons/heart.png" alt="" /></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div><!-- Single Following Post End -->
                                        </div>
                    }
                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div> <!-- From Following Area End -->
